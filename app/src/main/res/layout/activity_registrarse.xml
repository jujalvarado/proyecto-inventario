<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/gradient_background_registrarse"
tools:context=".Activities.RegistrarseActivity">

    <TextView
        android:id="@+id/rtextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/comfortaabold"
        android:shadowColor="#12ec34"
        android:text="@string/registrarse"
        android:textAlignment="center"
        android:textColor="#039BE5"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/rimageView"
        android:layout_width="151dp"
        android:layout_height="146dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/logo"
        app:layout_constraintEnd_toEndOf="@+id/rtextView"
        app:layout_constraintStart_toStartOf="@+id/rtextView"
        app:layout_constraintTop_toBottomOf="@+id/rtextView"
        app:srcCompat="@drawable/registrarse"
        tools:ignore="ImageContrastCheck" />

    <EditText
        android:id="@+id/reditTextNombres"
        android:layout_width="320dp"
        android:layout_height="65dp"
        android:layout_marginTop="24dp"
        android:autofillHints=""
        android:background="@drawable/custominput"
        android:drawableStart="@drawable/ic_person"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="@string/nombres"
        android:inputType="textEmailAddress"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/rimageView"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/rimageView"
        app:layout_constraintTop_toBottomOf="@+id/rimageView" />

    <EditText
        android:id="@+id/reditTextApellidos"
        android:layout_width="320dp"
        android:layout_height="65dp"
        android:layout_marginTop="108dp"
        android:autofillHints=""
        android:background="@drawable/custominput"
        android:drawableStart="@drawable/ic_person"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="@string/apellidos"
        android:inputType="textEmailAddress"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/reditTextNombres"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/reditTextNombres"
        app:layout_constraintTop_toBottomOf="@+id/rimageView" />

    <EditText
        android:id="@+id/reditTextContrasena"
        android:layout_width="320dp"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        android:autofillHints=""
        android:background="@drawable/custominput"
        android:drawableStart="@drawable/ic_contrasena"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="@string/contrasena"
        android:inputType="textPassword"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/reditTextEmail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/reditTextEmail"
        app:layout_constraintTop_toBottomOf="@+id/reditTextEmail" />

    <EditText
        android:id="@+id/reditTextEmail"
        android:layout_width="320dp"
        android:layout_height="65dp"
        android:layout_marginTop="196dp"
        android:autofillHints=""
        android:background="@drawable/custominput"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/reditTextApellidos"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/reditTextApellidos"
        app:layout_constraintTop_toBottomOf="@+id/rimageView" />

    <Button
        android:id="@+id/rbuttonRegistrarse"
        android:layout_width="210dp"
        android:layout_height="55dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/gradient_background_button"
        android:fontFamily="@font/comfortaabold"
        android:text="@string/registrarse"
        android:textAllCaps="false"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/reditTextContrasena"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/reditTextContrasena"
        app:layout_constraintTop_toBottomOf="@+id/reditTextContrasena" />


</androidx.constraintlayout.widget.ConstraintLayout>