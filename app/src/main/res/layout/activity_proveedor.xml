<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ProveedorActivity"
    android:background="@color/aqua_200"
    >


    <TextView
        android:id="@+id/provtextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/comfortaabold"
        android:shadowColor="#12ec34"
        android:text="Nuevo Proveedor"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,TextContrastCheck" />

    <EditText
        android:id="@+id/proveditTextNombre"
        android:layout_width="320dp"
        android:layout_height="65dp"
        android:layout_marginTop="64dp"
        android:autofillHints=""
        android:background="@drawable/custominput"
        android:drawableStart="@drawable/ic_proveedores1"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="text"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/provtextView"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="@+id/provtextView"
        app:layout_constraintTop_toBottomOf="@+id/provtextView"
        tools:ignore="TextContrastCheck" />

    <EditText
        android:id="@+id/proveditTextDireccion"
        android:layout_width="320dp"
        android:layout_height="65dp"
        android:layout_marginTop="28dp"
        android:autofillHints=""
        android:background="@drawable/custominput"
        android:drawableStart="@drawable/ic_direccion1"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="DirecciÃ³n"
        android:inputType="text"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/proveditTextNombre"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/proveditTextNombre"
        app:layout_constraintTop_toBottomOf="@+id/proveditTextNombre"
        tools:ignore="TextContrastCheck" />

    <EditText
        android:id="@+id/proveditTextTelefono"
        android:layout_width="320dp"
        android:layout_height="65dp"
        android:layout_marginTop="32dp"
        android:autofillHints=""
        android:background="@drawable/custominput"
        android:drawableStart="@drawable/ic_llamada1"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="Telefono"
        android:inputType="phone"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/proveditTextDireccion"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/proveditTextDireccion"
        app:layout_constraintTop_toBottomOf="@+id/proveditTextDireccion"
        tools:ignore="TextContrastCheck" />

    <EditText
        android:id="@+id/proveditTextCorreo"
        android:layout_width="320dp"
        android:layout_height="65dp"
        android:layout_marginTop="28dp"
        android:autofillHints=""
        android:background="@drawable/custominput"
        android:drawableStart="@drawable/ic_email1"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="Correo"
        android:inputType="textEmailAddress"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/proveditTextTelefono"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/proveditTextTelefono"
        app:layout_constraintTop_toBottomOf="@+id/proveditTextTelefono"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/ProvAgregarRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:fontFamily="@font/comfortaabold"
        android:padding="10dp"
        android:text="Agregar Proveedor "
        android:textAllCaps="false"
        android:textSize="21sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:icon="@drawable/ic_add"
        app:iconGravity="textEnd"
        app:iconSize="30dp"
        app:layout_constraintEnd_toEndOf="@+id/proveditTextCorreo"
        app:layout_constraintStart_toStartOf="@+id/proveditTextCorreo"
        app:layout_constraintTop_toBottomOf="@+id/proveditTextCorreo" />


    <Button
        android:id="@+id/ProvCancelarAgregar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:backgroundTint="@android:color/holo_orange_light"
        android:fontFamily="@font/comfortaabold"
        android:padding="12dp"
        android:text="Cancelar "
        android:visibility="gone"
        android:textAllCaps="false"
        android:textSize="21sp"
        android:textStyle="bold"
        app:icon="@drawable/ic_cancel"
        app:iconGravity="textEnd"
        app:iconSize="30dp"
        app:layout_constraintEnd_toEndOf="@+id/ProvAgregarRegistro"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/ProvAgregarRegistro"
        app:layout_constraintTop_toBottomOf="@+id/ProvAgregarRegistro" />

    <Button
        android:id="@+id/ProvEditarRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:fontFamily="@font/comfortaabold"
        android:padding="12dp"
        android:text="Editar Proveedor "
        android:visibility="gone"
        android:textAllCaps="false"
        android:textSize="21sp"
        android:textStyle="bold"
        app:icon="@drawable/ic_edit"
        app:iconGravity="textEnd"
        app:iconSize="30dp"
        app:layout_constraintEnd_toEndOf="@+id/proveditTextCorreo"
        app:layout_constraintStart_toStartOf="@+id/proveditTextCorreo"
        app:layout_constraintTop_toBottomOf="@+id/proveditTextCorreo" />

    <Button
        android:id="@+id/ProvEliminarRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:fontFamily="@font/comfortaabold"
        android:padding="12dp"
        android:text="Eliminar Proveedor "
        android:textAllCaps="false"
        android:textSize="21sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:icon="@drawable/ic_delete"
        app:iconGravity="textEnd"
        app:iconSize="30dp"
        app:layout_constraintEnd_toEndOf="@+id/ProvEditarRegistro"
        app:layout_constraintStart_toStartOf="@+id/ProvEditarRegistro"
        app:layout_constraintTop_toBottomOf="@+id/ProvEditarRegistro" />

    <Button
        android:id="@+id/ProvActualizarProveedor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:fontFamily="@font/comfortaabold"
        android:padding="12dp"
        android:text="Guardar Cambios "
        android:visibility="gone"
        android:textAllCaps="false"
        android:textSize="21sp"
        android:textStyle="bold"
        app:icon="@drawable/ic_savechanges"
        app:iconGravity="textEnd"
        app:iconSize="30dp"
        app:layout_constraintEnd_toEndOf="@+id/proveditTextCorreo"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/proveditTextCorreo"
        app:layout_constraintTop_toBottomOf="@+id/ProvEditarRegistro" />

    <Button
        android:id="@+id/ProvCancelarActualizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:backgroundTint="@android:color/holo_orange_light"
        android:fontFamily="@font/comfortaabold"
        android:padding="12dp"
        android:text="Cancelar "
        android:visibility="gone"
        android:textAllCaps="false"
        android:textSize="21sp"
        android:textStyle="bold"
        app:icon="@drawable/ic_cancel"
        app:iconGravity="textEnd"
        app:iconSize="30dp"
        app:layout_constraintEnd_toEndOf="@+id/ProvActualizarProveedor"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/ProvActualizarProveedor"
        app:layout_constraintTop_toBottomOf="@+id/ProvActualizarProveedor" />

</androidx.constraintlayout.widget.ConstraintLayout>