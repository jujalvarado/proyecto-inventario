<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.CategoriasProductosFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/aqua_200">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/CPAgregarRegistro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:backgroundTint="@android:color/holo_green_dark"
            android:fontFamily="@font/comfortaabold"
            android:padding="15dp"
            android:text="Agregar CategorÃ­as "
            android:textAllCaps="false"
            android:textSize="21sp"
            android:textStyle="bold"

            app:icon="@drawable/ic_add"
            app:iconGravity="textEnd"
            app:iconSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:fontFamily="@font/comfortaaregular"
            android:text="No hay registros..."
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="@+id/CPAgregarRegistro"
            app:layout_constraintStart_toStartOf="@+id/CPAgregarRegistro"
            app:layout_constraintTop_toBottomOf="@+id/CPAgregarRegistro">

        </TextView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>